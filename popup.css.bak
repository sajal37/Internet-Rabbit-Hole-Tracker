@import url("https://fonts.googleapis.com/css2?family=Instrument+Serif:ital@0;1&family=Manrope:wght@400;500;600;700&display=swap");

:root {
  color-scheme: light;
  --bg-1: #f6efe6;
  --bg-2: #e7d7c3;
  --ink: #1f1a17;
  --ink-soft: #4d4036;
  --accent: #d66a3d;
  --accent-ink: #fdf6ef;
  --surface: rgba(255, 255, 255, 0.78);
  --border: rgba(31, 26, 23, 0.12);
  --shadow: 0 18px 40px rgba(31, 26, 23, 0.18);
}

* {
  box-sizing: border-box;
}

html,
body {
  margin: 0;
  width: 280px;
  height: auto;
  min-height: 0;
}

body {
  font-family: "Manrope", sans-serif;
  color: var(--ink);
  background:
    radial-gradient(circle at 10% 20%, rgba(214, 106, 61, 0.25), transparent 55%),
    radial-gradient(circle at 90% 10%, rgba(34, 120, 108, 0.2), transparent 50%),
    linear-gradient(140deg, var(--bg-1), var(--bg-2));
  display: grid;
  place-items: center;
  overflow: hidden;
}

body.theme-ink {
  --bg-1: #e8edf6;
  --bg-2: #d5def0;
  --ink: #1b2330;
  --ink-soft: #4d5766;
  --accent: #2f5f8b;
  --surface: rgba(255, 255, 255, 0.9);
}

body.theme-forest {
  --bg-1: #eef3ec;
  --bg-2: #d6e4d1;
  --ink: #1b2a1c;
  --ink-soft: #4e5c50;
  --accent: #3c7a52;
}

body.theme-retro {
  --bg-1: #f7efe0;
  --bg-2: #f0d6b8;
  --ink: #311f17;
  --ink-soft: #624b40;
  --accent: #c4562a;
}

body.theme-paper {
  --bg-1: #f8f5ef;
  --bg-2: #ece2d5;
  --ink: #2a2420;
  --ink-soft: #5a4f47;
  --accent: #b46a4a;
}

body.theme-noir {
  --bg-1: #1e1e21;
  --bg-2: #2a2a30;
  --ink: #f0eae4;
  --ink-soft: #c7bbb2;
  --accent: #d46a40;
  --surface: rgba(34, 34, 38, 0.9);
  --border: rgba(240, 234, 228, 0.12);
}

body.theme-ink {
  background:
    radial-gradient(circle at 20% 20%, rgba(47, 95, 139, 0.22), transparent 52%),
    radial-gradient(circle at 80% 10%, rgba(27, 35, 48, 0.12), transparent 55%),
    linear-gradient(155deg, var(--bg-1), var(--bg-2));
}

body.theme-forest {
  background:
    radial-gradient(circle at 15% 15%, rgba(60, 122, 82, 0.2), transparent 55%),
    radial-gradient(circle at 85% 5%, rgba(27, 42, 28, 0.12), transparent 55%),
    linear-gradient(155deg, var(--bg-1), var(--bg-2));
}

body.theme-retro {
  background:
    radial-gradient(circle at 20% 10%, rgba(196, 86, 42, 0.2), transparent 55%),
    radial-gradient(circle at 80% 20%, rgba(108, 76, 62, 0.18), transparent 55%),
    linear-gradient(155deg, var(--bg-1), var(--bg-2));
}

.popup-shell {
  width: 100%;
  height: auto;
  padding: 10px;
  display: grid;
  align-items: start;
}

.popup-card {
  position: relative;
  width: 100%;
  padding: 12px;
  border-radius: 18px;
  background: var(--surface);
  border: 1px solid var(--border);
  box-shadow: var(--shadow);
  display: grid;
  gap: 10px;
  animation: lift 0.5s ease both;
}

.popup-card.layout-cards .popup-glance {
  grid-template-columns: repeat(2, minmax(0, 1fr));
}

.popup-card.layout-focus .popup-glance {
  grid-template-columns: 1fr;
}

.popup-card.layout-focus .glance-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.popup-card::after {
  content: "";
  position: absolute;
  inset: -40% 50% auto auto;
  width: 140px;
  height: 140px;
  border-radius: 50%;
  background: rgba(214, 106, 61, 0.18);
  filter: blur(8px);
  animation: drift 6s ease-in-out infinite;
  pointer-events: none;
}

.brand {
  display: grid;
  gap: 6px;
}

.brand-top {
  display: flex;
  align-items: center;
  justify-content: space-between;
  gap: 8px;
}

.eyebrow {
  text-transform: uppercase;
  letter-spacing: 0.22em;
  font-size: 10px;
  color: var(--ink-soft);
}

.brand h1 {
  margin: 0;
  font-family: "Instrument Serif", serif;
  font-size: 18px;
  font-weight: 400;
  letter-spacing: 0.02em;
}

.tagline {
  margin: 0;
  font-size: 10px;
  color: var(--ink-soft);
}

.micro-note {
  margin: 0;
  font-size: 9px;
  color: var(--ink-soft);
}

.mood-chip {
  padding: 2px 6px;
  border-radius: 999px;
  border: 1px solid var(--border);
  background: rgba(255, 255, 255, 0.6);
  font-size: 9px;
}

.tagline,
.micro-note,
.mood-chip {
  display: inline-flex;
  align-items: center;
  gap: 4px;
}

.micro-note::before {
  content: "*";
  font-size: 9px;
  color: var(--accent);
}

.mood-chip::before {
  content: "@";
  font-size: 9px;
  color: var(--accent);
}

.popup-glance {
  display: grid;
  gap: 6px;
  grid-template-columns: repeat(2, minmax(0, 1fr));
}

.popup-glance.collapsed .glance-item:nth-child(n + 4) {
  display: none;
}

.popup-glance:hover .glance-item {
  display: grid;
}

.glance-toggle {
  width: 100%;
  padding: 6px 8px;
  border-radius: 10px;
  border: 1px dashed var(--border);
  background: rgba(255, 255, 255, 0.45);
  color: var(--ink-soft);
  font-size: 9px;
  cursor: pointer;
}

.glance-item {
  padding: 6px 7px;
  border-radius: 12px;
  background: rgba(255, 255, 255, 0.6);
  border: 1px solid var(--border);
  display: grid;
  gap: 3px;
  font-size: 10px;
}

.glance-item strong {
  font-size: 10px;
  color: var(--ink);
}

.glance-item--primary {
  grid-column: 1 / -1;
  background: rgba(255, 255, 255, 0.85);
  border: 1px solid rgba(31, 26, 23, 0.2);
  text-align: center;
}

.glance-item--primary span {
  font-size: 9px;
  text-transform: uppercase;
  letter-spacing: 0.1em;
  color: var(--ink-soft);
}

.glance-item--primary strong {
  font-size: 16px;
  font-weight: 700;
}

.glance-item--secondary {
  opacity: 0.7;
}

.glance-badge {
  justify-self: start;
  padding: 2px 6px;
  border-radius: 999px;
  font-size: 9px;
  font-weight: 700;
  background: rgba(31, 26, 23, 0.08);
  color: var(--ink);
}

.glance-badge.level-low {
  background: rgba(60, 122, 82, 0.2);
  color: #1b3f28;
}

.glance-badge.level-mid {
  background: rgba(214, 106, 61, 0.22);
  color: #7a3a1f;
}

.glance-badge.level-high {
  background: rgba(169, 44, 44, 0.25);
  color: #6e1e1e;
}

.popup-actions {
  display: grid;
  gap: 6px;
}

.primary {
  width: 100%;
  padding: 9px 11px;
  border-radius: 14px;
  border: none;
  background: var(--accent);
  color: var(--accent-ink);
  font-size: 12px;
  font-weight: 600;
  cursor: pointer;
  display: inline-flex;
  align-items: center;
  justify-content: space-between;
  gap: 8px;
  box-shadow: 0 12px 24px rgba(214, 106, 61, 0.35);
  transition: transform 0.2s ease, box-shadow 0.2s ease;
}

.primary:hover {
  transform: translateY(-1px);
  box-shadow: 0 16px 28px rgba(214, 106, 61, 0.4);
}

.ghost {
  width: 100%;
  padding: 8px 9px;
  border-radius: 12px;
  border: 1px solid var(--border);
  background: rgba(255, 255, 255, 0.7);
  color: var(--ink);
  font-size: 10px;
  cursor: pointer;
}

body.popup-compact .popup-card {
  gap: 10px;
  padding: 14px;
}

body.popup-compact .popup-glance {
  gap: 6px;
}

body.popup-compact .glance-item {
  padding: 6px 8px;
}

@keyframes lift {
  from {
    opacity: 0;
    transform: translateY(12px);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}

@keyframes drift {
  0%,
  100% {
    transform: translate3d(0, 0, 0);
  }
  50% {
    transform: translate3d(-12px, 10px, 0);
  }
}

@media (prefers-reduced-motion: reduce) {
  .popup-card,
  .popup-card::after,
  .primary {
    animation: none;
    transition: none;
  }
}

body.reduce-motion .popup-card,
body.reduce-motion .popup-card::after,
body.reduce-motion .primary {
  animation: none;
  transition: none;
}
